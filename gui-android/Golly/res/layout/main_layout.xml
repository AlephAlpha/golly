<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:background="#DDDDDD"
    	android:orientation="horizontal" >
    	<Button
        	android:id="@+id/startstop"
        	style="?android:attr/buttonStyleSmall"
        	android:minHeight="0dp"
        	android:minWidth="0dp"
        	android:layout_height="40sp"
        	android:layout_width="56sp"
    		android:textColor="#00FF00"
    		android:onClick="toggleStartStop"
			android:text="Start" />
    	<Button
    	    android:id="@+id/fitpattern"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_alignParentRight="true"
    	    android:layout_width="wrap_content"
    	    android:layout_height="40sp"
    	    android:minHeight="0dp"
    	    android:onClick="doFitPattern"
    	    android:text="Fit" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/status1"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:textSize="8sp"
        android:background="#FFFFD5"
        android:typeface="monospace"
        android:paddingLeft="4dp"
        android:text=" Line 1" />
    <TextView
        android:id="@+id/status2"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:textSize="8sp"
        android:background="#FFFFD5"
        android:typeface="monospace"
        android:paddingLeft="4dp"
        android:text=" Line 2" />
    <TextView
        android:id="@+id/status3"
        android:layout_width="match_parent"
        android:layout_height="13sp"
        android:textSize="8sp"
        android:background="#FFFFD5"
        android:typeface="monospace"
        android:paddingLeft="4dp"
        android:text=" Line 3 abcdefghijklmnopqrstuvwxyz" />
    
    <net.sf.golly.PatternGLSurfaceView
        android:id="@+id/patternview"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="horizontal" >
    	<Button
    	    android:id="@+id/newpattern"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="wrap_content"
    	    android:layout_height="40sp"
    	    android:minHeight="0dp"
    	    android:onClick="doNewPattern"
    	    android:text="New" />
    </RelativeLayout>
    
</LinearLayout>
